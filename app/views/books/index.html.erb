<div class ="books">
    
    
    <!-- HTML based on tutorials by Kevin Skoglund on LinkedInLearning "Ruby on Rails 6 Essential Training"-->
    <!-- Table template from Faiz Ahmed https://codepen.io/faaezahmd/pen/dJeRex-->
    <div class="container">
    <%= link_to("Go Back", books_path, :class=>'back-link')%>
    <h2>Book Database</h2>
    <button><%= link_to("Add a book.", new_book_path, :class=> 'action new')%></button>
        <ul class="responsive-table">
        
            <li class="table-header">
            <div class="col col-1">Published</div>
            <div class="col col-2">Title</div>
            <div class="col col-3">Author</div>
            <div class="col col-4">Genre</div>
            <div class="col col-5">Price</div>
            <div class="col col-6">Actions</div>
            </li>
            <% @books.each do |book| %>
                <li class="table-row">
                    <div class="col col-1" data-label="Published"><%= book.published %></div>
                    <div class="col col-2" data-label="Title"><%= book.title %></div>
                    <div class="col col-3" data-label="Author"><%= book.author %></div>
                    <div class="col col-4" data-label="Genre"><%= book.genre %></div>
                    <div class="col col-5" data-label="Price"><%= book.price %></div>
                    <div class="col col-6" data-label="Actions"> 
                    <%= link_to("Show", book_path(book), :class => 'action show') %>
                        <%= link_to("Edit", edit_book_path(book), :class => 'action edit') %>
                        <%= link_to("Delete", delete_book_path(book), :class => 'action delete') %>
                        </div>
                </li>
            <%end%>
        </ul>
    </div>
    
</div>


